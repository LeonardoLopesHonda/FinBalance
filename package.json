{
  "name": "finbalance",
  "version": "1.0.0",
  "description": "A website where you can manage your finances",
  "main": "index.js",
  "scripts": {
    "dev": "node infra/scripts/run-dev",
    "test": "npm run services:up && npm run concurrent:next-jest",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "test:e2e": "npm run services:up && npm run concurrent:next-cypress",
    "test:e2e:open": "cypress open",
    "test:e2e:run": "cypress run --browser chrome --headless",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "concurrent:next-jest": "concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "concurrent:next-cypress": "concurrently -n next,cypress --hide next -k -s command-cypress \"next dev\" \"wait-on --timeout 60000 http://localhost:3000 && npm run test:e2e:run\"",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "cookie": "1.0.2",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "module-alias": "2.2.3",
    "next": "14.2.5",
    "next-auth": "4.24.11",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.2.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.0",
    "@babel/preset-env": "7.28.0",
    "@babel/register": "7.27.1",
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@faker-js/faker": "9.7.0",
    "@testing-library/cypress": "10.0.3",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cypress": "14.5.2",
    "cypress-social-logins": "1.14.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-cypress": "3.6.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "set-cookie-parser": "2.7.1",
    "wait-on": "^8.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "_moduleAliases": {
    "tests": "tests"
  }
}
